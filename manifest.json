{
  "manifest_version": 3,
  "name": "WhatsApp Image Rotator",
  "version": "1.0",
  "description": "Rotate images in WhatsApp Web",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "css": ["rotate.css"]
    }
  ],
  "icons": {
    "32": "icon.png"
  }
}
